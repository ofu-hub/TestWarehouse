@model TestWarehouse.Models.Pallet

@{
    ViewData["Title"] = "Добавить паллету";
}

<h2>Добавить паллету</h2>

<form asp-action="CreatePallet" method="post">
    <div class="form-group">
        <label asp-for="Width">Ширина</label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height">Высота</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Depth">Глубина</label>
        <input asp-for="Depth" class="form-control" />
        <span asp-validation-for="Depth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a asp-action="Index">Назад к списку</a>
